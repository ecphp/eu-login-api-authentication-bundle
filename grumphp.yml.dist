imports:
  - { resource: vendor/drupol/php-conventions/config/php73/grumphp.yml }

parameters:
  tasks.phpstan.configuration: phpstan.neon
  extra_tasks:
    psalm:
      show_info: true
    phpspec:
      verbose: true
    clover_coverage:
      clover_file: build/logs/clover.xml
      level: 5
    infection:
      threads: 2
      test_framework: phpspec
      configuration: infection.json.dist
      min_msi: 5
      min_covered_msi: 5
